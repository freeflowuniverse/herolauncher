extends ../layout

block content
  article
    header
      h2 System Logs
      p View and filter system logs
    
    .grid
      div
        article
          header
            h3 Log Controls
          
          form
            label(for="log-level") Log Level
            select#log-level
              option(value="all") All Levels
              option(value="info") Info
              option(value="warning") Warning
              option(value="error") Error
              option(value="debug") Debug
            
            label(for="log-source") Log Source
            select#log-source
              option(value="all") All Sources
              option(value="system") System
              option(value="redis") Redis
              option(value="executor") Executor
              option(value="packagemanager") Package Manager
            
            label(for="log-date") Date Range
            input#log-date(type="date")
            
            button(type="submit") Apply Filters
      
      div
        article
          header
            h3 Log Output
          
          pre.log-output
            code
